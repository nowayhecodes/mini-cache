{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleDetection": "auto",
    "module": "commonjs",
    "types": ["node", "jest"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src/*.ts"],
  "exclude": ["./src/*.(spec|test).ts", "./node_modules"]
}
